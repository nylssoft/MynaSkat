<Window x:Class="MynaSkat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MynaSkat"
        Icon="Images/back.gif"
        Background="Green"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="Myna Skat" Height="690" Width="1300">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightYellow" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="LightYellow" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="LightYellow" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="LightYellow" />
            <Setter Property="Background" Value="DarkBlue" />
            <Setter Property="FontSize" Value="18.0" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="160" />
            <RowDefinition Height="180" />
            <RowDefinition Height="180" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <RadioButton GroupName="player" Margin="0,0,60,0" Grid.Row="0" Grid.Column="0" x:Name="radioButtonPlayer1" Content="Player 1" VerticalAlignment="Center" Click="RadioButtonPlayer_Click"/>
            <TextBlock Margin="0,0,5,0" Grid.Row="0" Grid.Column="1" x:Name="textBlockStatus1" Text="Status1" VerticalAlignment="Center"/>
            <TextBlock Foreground="Aqua" Grid.Row="0" Grid.Column="2" x:Name="textBlockGame1" VerticalAlignment="Center" />
            <Button Grid.Row="0" Grid.Column="3" x:Name="buttonReizenYes1" Width="140" Margin="0,5,0,5" Content="18!" Click="ButtonReizen_Click"/>
            <Button Grid.Row="0" Grid.Column="4" x:Name="buttonReizenNo1" Width="140" Margin="0,5,0,5" Content="Weg" Click="ButtonReizen_Click"/>
            <RadioButton GroupName="player" Margin="0,0,60,0" Grid.Row="1" Grid.Column="0" x:Name="radioButtonPlayer2" Content="Player 2" VerticalAlignment="Center" Click="RadioButtonPlayer_Click"/>
            <TextBlock Margin="0,0,5,0" Grid.Row="1" Grid.Column="1" x:Name="textBlockStatus2" Text="Status1" VerticalAlignment="Center"/>
            <TextBlock Foreground="Aqua" Grid.Row="1" Grid.Column="2" x:Name="textBlockGame2" VerticalAlignment="Center" />
            <Button Grid.Row="1" Grid.Column="3" x:Name="buttonReizenYes2" Width="140" Margin="0,5,0,5" Content="18!" Click="ButtonReizen_Click"/>
            <Button Grid.Row="1" Grid.Column="4" x:Name="buttonReizenNo2" Width="140" Margin="0,5,0,5" Content="Weg" Click="ButtonReizen_Click"/>
            <RadioButton GroupName="player" Margin="0,0,60,0" Grid.Row="2" Grid.Column="0" x:Name="radioButtonPlayer3" Content="Player 3" VerticalAlignment="Center" Click="RadioButtonPlayer_Click"/>
            <TextBlock Margin="0,0,5,0" Grid.Row="2" Grid.Column="1" x:Name="textBlockStatus3" Text="Status1" VerticalAlignment="Center"/>
            <TextBlock Foreground="Aqua" Grid.Row="2" Grid.Column="2" x:Name="textBlockGame3" VerticalAlignment="Center" />
            <Button Grid.Row="2" Grid.Column="3" x:Name="buttonReizenYes3" Width="140" Margin="0,5,0,5" Content="18!" Click="ButtonReizen_Click"/>
            <Button Grid.Row="2" Grid.Column="4" x:Name="buttonReizenNo3" Width="140" Margin="0,5,0,5" Content="Weg" Click="ButtonReizen_Click"/>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Image x:Name="imageSkat0" Grid.Column="0" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageSkat1" Grid.Column="1" Height="140" Width="90" MouseDown="Image_MouseDown"/>
        </Grid>
        <Grid Grid.Row="2" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Image x:Name="imageCard0" Grid.Column="0" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard1" Grid.Column="1" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard2" Grid.Column="2" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard3" Grid.Column="3" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard4" Grid.Column="4" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard5" Grid.Column="5" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard6" Grid.Column="6" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard7" Grid.Column="7" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard8" Grid.Column="8" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard9" Grid.Column="9" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard10" Grid.Column="10" Height="140" Width="90" MouseDown="Image_MouseDown"/>
            <Image x:Name="imageCard11" Grid.Column="11" Height="140" Width="90" MouseDown="Image_MouseDown"/>
        </Grid>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <RadioButton GroupName="Game" x:Name="radionButtonGrand" Content="Grand" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click"/>
            <RadioButton GroupName="Game" x:Name="radionButtonNull" Content="Null" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click" />
            <RadioButton GroupName="Game" x:Name="radionButtonKreuz" Content="Kreuz" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click"/>
            <RadioButton GroupName="Game" x:Name="radionButtonPik" Content="Pik" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click"/>
            <RadioButton GroupName="Game" x:Name="radionButtonHerz" Content="Herz" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click"/>
            <RadioButton GroupName="Game" x:Name="radionButtonKaro" Content="Karo" VerticalAlignment="Center" Margin="5,0,5,0" Click="RadioButtonGameType_Click"/>
            <CheckBox x:Name="checkBoxOuvert" Content="Ouvert" VerticalAlignment="Center" Margin="100,0,5,0" Click="CheckBoxOption_Click"/>
            <CheckBox x:Name="checkBoxHand" Content="Hand" VerticalAlignment="Center" Margin="5,0,5,0" Click="CheckBoxOption_Click"/>
            <CheckBox x:Name="checkBoxSchneider" Content="Schneider" VerticalAlignment="Center" Margin="5,0,5,0" Click="CheckBoxOption_Click"/>
            <CheckBox x:Name="checkBoxSchwarz" Content="Schwarz" VerticalAlignment="Center" Margin="5,0,5,0" Click="CheckBoxOption_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button x:Name="buttonNewGame" Content="Neues Spiel" Width="120" Margin="10,5,10,5" Click="Button_NewGame"/>
        </StackPanel>
    </Grid>
</Window>
